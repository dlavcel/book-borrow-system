<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coursework.fxControllers.ProductWindow">
   <children>
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Products">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="productListField" layoutX="14.0" layoutY="14.0" onMouseClicked="#loadProductData" prefHeight="347.0" prefWidth="200.0" />
                         <ChoiceBox fx:id="publicationType" layoutX="238.0" layoutY="14.0" prefWidth="150.0" />
                        <TextField fx:id="titleField" layoutX="238.0" layoutY="48.0" promptText="iveskite pavadinima" />
                        <TextField fx:id="authorField" layoutX="238.0" layoutY="83.0" promptText="iveskite autoriu" />
                        <TextField fx:id="issueNumberField" layoutX="238.0" layoutY="154.0" promptText="issueNumber" />
                        <TextField fx:id="editorField" layoutX="238.0" layoutY="185.0" promptText="editor" />
                        <TextField fx:id="illustratorField" layoutX="237.0" layoutY="253.0" promptText="illustrator" />
                        <TextField fx:id="volumeField" layoutX="407.0" layoutY="14.0" promptText="volume" />
                        <TextField fx:id="isbnField" layoutX="407.0" layoutY="129.0" promptText="isbn" />
                        <TextField fx:id="pageCountField" layoutX="407.0" layoutY="185.0" promptText="pageCount" />
                        <TextField fx:id="summaryField" layoutX="416.0" layoutY="287.0" promptText="summary" />
                        <ChoiceBox fx:id="frequencyField" layoutX="238.0" layoutY="218.0" prefWidth="150.0" />
                        <ChoiceBox fx:id="demographicField" layoutX="407.0" layoutY="48.0" prefWidth="150.0" />
                        <TextField fx:id="publisherField" layoutX="406.0" layoutY="104.0" promptText="publisher" />
                        <CheckBox fx:id="colorField" layoutX="423.0" layoutY="83.0" mnemonicParsing="false" text="isColor" />
                        <ChoiceBox fx:id="genreField" layoutX="406.0" layoutY="154.0" prefWidth="150.0" />
                        <ChoiceBox fx:id="languageField" layoutX="407.0" layoutY="218.0" prefWidth="150.0" />
                        <ChoiceBox fx:id="formatField" layoutX="406.0" layoutY="253.0" prefWidth="150.0" />
                        <Button fx:id="addButton" layoutX="247.0" layoutY="336.0" mnemonicParsing="false" onAction="#createNewProduct" text="Add" />
                        <Button fx:id="updateButton" layoutX="319.0" layoutY="336.0" mnemonicParsing="false" onAction="#updateProduct" text="Update" />
                        <Button fx:id="deleteButton" layoutX="397.0" layoutY="336.0" mnemonicParsing="false" onAction="#deleteProduct" text="Delete" />
                        <DatePicker fx:id="publicationDateField" layoutX="224.0" layoutY="116.0" promptText="date" />
                        <ChoiceBox fx:id="ogLanguageField" layoutX="237.0" layoutY="287.0" prefWidth="150.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
