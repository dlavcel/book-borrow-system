<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coursework.fxControllers.ChatController">
   <children>
      <Pane prefHeight="400.0" prefWidth="600.0">
         <children>
            <ListView fx:id="chatListField" layoutX="14.0" layoutY="27.0" onMouseClicked="#loadChatData" prefHeight="244.0" prefWidth="180.0" />
            <TextField fx:id="chatTitleField" layoutX="29.0" layoutY="280.0" promptText="chatTitle" />
            <TextField fx:id="commentTitleField" layoutX="422.0" layoutY="54.0" promptText="commentTitle" />
            <Button layoutX="14.0" layoutY="313.0" mnemonicParsing="false" onAction="#createNewChat" prefHeight="25.0" prefWidth="83.0" text=" Create Chat" />
            <Button layoutX="116.0" layoutY="313.0" mnemonicParsing="false" onAction="#deleteChat" text="Delete Chat" />
            <ListView fx:id="commentListField" layoutX="224.0" layoutY="27.0" onMouseClicked="#loadCommentData" prefHeight="244.0" prefWidth="180.0" />
            <Button layoutX="224.0" layoutY="280.0" mnemonicParsing="false" onAction="#addComment" text="Add" />
            <Button layoutX="288.0" layoutY="280.0" mnemonicParsing="false" onAction="#updateComment" text="Update" />
            <Button layoutX="352.0" layoutY="280.0" mnemonicParsing="false" onAction="#deleteComment" text="Delete" />
            <TextArea fx:id="commentArea" layoutX="414.0" layoutY="100.0" prefHeight="200.0" prefWidth="165.0" />
            <Label layoutX="56.0" layoutY="5.0" text="Chats" />
            <Label layoutX="286.0" layoutY="5.0" text="Comments" />
            <Button layoutX="30.0" layoutY="347.0" mnemonicParsing="false" onAction="#updateChat" text="Update Chat" />
         </children>
      </Pane>
   </children>
</AnchorPane>
